<%= live_render @socket, PicselloWeb.LiveModal, id: "live_modal" %>
<main role="main" class="flex flex-col min-h-screen">
  <.subscription_ending_soon type="banner" socket={@socket} current_user={@current_user} class="flex lg:pl-20 px-6 items-center bg-blue-planning-100 py-2"/>
  <header class="border-b">
    <div class="flex items-center px-6 center-container">
      <div id="hamburger-menu" class="relative cursor-pointer" phx-hook="ToggleContent">
        <%= if @current_user do %>
        <div class="absolute left-0 z-10 flex flex-col items-start hidden cursor-default -top-2 toggle-content">
          <div class="p-4 -mb-2 bg-white shadow-md cursor-pointer text-base-300">
            <.icon name="close-x" class="w-4 h-4 stroke-current stroke-2" />
          </div>

          <nav class="flex flex-col bg-white rounded-lg shadow-md">
            <%= for %{title: title, icon: icon, path: path} <- side_nav(@socket, @current_user), @current_user do %>
              <.nav_link title={title} to={path} socket={@socket} live_action={@live_action} current_user={@current_user} class="px-6 flex items-center py-4 whitespace-nowrap hover:bg-blue-planning-100 hover:font-bold" active_class="bg-blue-planning-100 font-bold">
                <.icon name={icon} class="inline-block w-5 h-5 mr-2 text-blue-planning-300 shrink-0" />
                <%= title %>
              </.nav_link>
            <% end %>
          </nav>
        </div>

        <.icon name="hamburger" class="h-4 text-base-300 w-9" />
        <% end %>
      </div>

      <nav class="flex items-center justify-center flex-1 mx-8 lg:justify-start">
        <%= live_redirect to: (apply Routes, (if @current_user, do: :home_path, else: :page_path), [@socket, :index]), title: "Picsello" do %>
          <.icon name="logo" class="my-4 w-28 h-9" />
        <% end %>

        <%= for %{title: title, icon: icon, path: path} <- top_nav(@socket), @current_user do %>
          <.nav_link title={title} to={path} socket={@socket} live_action={@live_action} class="hidden lg:flex ml-10 items-center p-3 mr-2 hover:bg-blue-planning-100" active_class="">
            <.icon name={icon} class="inline-block w-6 h-6 mr-2 text-blue-planning-300" />
            <%= title %>
          </.nav_link>
        <% end %>
      </nav>

      <div id="initials-menu" class="relative flex flex-row justify-end cursor-pointer z-30" phx-hook="ToggleContent">
        <%= if @current_user do %>
        <div class="absolute top-0 right-0 flex flex-col items-end hidden cursor-default text-base-300 toggle-content">
          <div class="p-4 -mb-2 bg-white shadow-md cursor-pointer text-base-300">
            <.icon name="close-x" class="w-4 h-4 stroke-current stroke-2" />
          </div>

          <div class="bg-gray-100 rounded-lg shadow-md">
            <%= live_redirect to: Routes.user_settings_path(@socket, :edit), title: "Account", class: "flex items-center px-6 py-4 bg-white" do %>
              <.initials_circle user={@current_user} />
              <div class="ml-2 font-semibold">Account</div>
            <% end %>

            <.form for={:sign_out} action={Routes.user_session_path(@socket, :delete)} method="delete">
              <%= submit "Logout", class: "px-6 text-left py-2 w-full" %>
            </.form>
          </div>
        </div>

        <div class="flex flex-col items-center justify-center text-sm text-base-300 bg-gray-100 rounded-full w-9 h-9 pb-0.5" title={@current_user.name}>
          <%= User.initials @current_user %>
        </div>
        <% end %>
      </div>
    </div>
  </header>
  <%= flash(@flash) %>

  <%= @inner_content %>

  <div class="mt-12"></div>
  <footer class="mt-auto hidden sm:block bg-base-300 text-white">
    <div class="px-6 center-container py-10">
      <nav class="flex text-lg font-bold mt-4">
        <ul class="flex">
          <li><a href="https://support.picsello.com/" target="_blank" rel="noopener noreferrer">Help center</a></li>
          <%= if @current_user && Application.get_env(:picsello, :help_scout_id) do %>
          <li><a href="#" class="ml-10" {help_scout_output(@current_user, :help_scout_id)}>Contact us</a></li>
          <% end %>
          <li><a class="ml-10" href="https://www.picsello.com/blog" target="_blank" rel="noopener noreferrer">Blog</a></li>
        </ul>
        <.subscription_ending_soon type="footer" socket={@socket} current_user={@current_user} class="flex ml-auto bg-base-250 rounded px-2 py-1 items-center"/>
      </nav>
      <hr class="my-8 opacity-30" />
      <div class="flex">
        <div>Copyright Â© <%= DateTime.utc_now.year %> Picsello</div>
        <ul class="flex ml-auto">
          <li><a href="https://www.picsello.com/terms-conditions" target="_blank" rel="noopener noreferrer">Terms</a></li>
          <li><a href="https://www.picsello.com/privacy-policy" class="ml-10" target="_blank" rel="noopener noreferrer">Privacy Policy</a></li>
          <li><a href="https://www.picsello.com/privacy-policy#ccpa" class="ml-10" target="_blank" rel="noopener noreferrer">California Privacy</a></li>
        </ul>
      </div>
    </div>
  </footer>
</main>

<.help_scout_menu current_user={@current_user} />
