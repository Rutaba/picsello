<div class="p-8">
  <h1 class="title">Forgot your password?</h1>

  <%= f = form_for @changeset, "#", phx_change: :validate, phx_submit: :submit %>
    <%= labeled_input f, :email, placeholder: "jane@example.com", phx_debounce: "500", wrapper_class: "mt-4" %>


    <div class="text-center mt-5">
      <%= submit "Reset Password", class: "px-8 btn-primary mx-1", disabled: !@changeset.valid?, phx_disable_with: "Sending email..." %>
    </div>
  </form>
</div>
