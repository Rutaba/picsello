<div class="center-container mx-4 md:px-6 pt-6">
  <div class="flex items-center pb-2 mt-4 text-4xl font-bold md:justify-start">
      <.live_link to={Routes.gallery_path(@socket, :galleries)} class={classes("rounded-full bg-base-200 flex items-center justify-center p-2.5 mt-2 mr-4 md:block", %{"hidden" => !is_nil(@show_side_nav)})}>
        <.icon name="back" class="w-4 h-4 stroke-2"/>
      </.live_link>
      <div class={classes("rounded-full text-white bg-blue-planning-300 flex items-center justify-center p-2.5 mt-2 mr-4 md:hidden", %{"hidden" => is_nil(@show_side_nav)})} phx-click="back_to_menu">
        <.icon name="back" class="w-4 h-4 stroke-2"/>
      </div>
    <h1 class="md:hidden text-3xl">
        <%= @title %>
    </h1>
    <h1 class="hidden md:block">
        Gallery Settings
    </h1>
  </div>

  <hr class="mt-8 border-gray-100">

  <div class={classes("md:block", %{"hidden" => !is_nil(@show_side_nav)})}>
    <h1 class="mt-4 text-2xl font-bold">
      Galleries
    </h1>
    <div class="mt-1 text-base-250">
      Easily set (so you can forget!) your gallery settings on a global level including expiration dates, watermark, product settings, and related products.
    </div>
    <hr class="mt-8 border-gray-100">
  </div>

  <div class="flex flex-col lg:flex-row lg:mt-8">
    <div class={classes("h-60 md:block", %{"hidden" => !is_nil(@show_side_nav)})}>
      <div class="w-full p-5 mt-auto sm:mt-0 sm:bottom-auto sm:static sm:items-start sm:w-auto grid grid-cols-1 bg-base-200 rounded-xl lg:w-80 gap-y-1">
          <.nav_item open?={@show_side_nav == "expiration_date"} show_side_nav={@show_side_nav} item_title="Expiration Date" value="expiration_date"/>
          <.nav_item open?={@show_side_nav == "watermark"} show_side_nav={@show_side_nav} item_title="Watermark" value="watermark"/>
          <.nav_item open?={@show_side_nav in ["print_product", "products"]} show_side_nav={@show_side_nav} item_title="Product Settings & Prices" value="products"/>
          <.nav_item open?={@show_side_nav == "digital_pricing"} show_side_nav={@show_side_nav} item_title="Digital Pricing" value="digital_pricing"/>
      </div>
    </div>

    <div class="flex-1 sm:ml-8">
      <.section {assigns} />
    </div>
  </div>
</div>
